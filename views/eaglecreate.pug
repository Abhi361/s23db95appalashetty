extends layout

block content
  h1= title
  form#eagleForm(action="/resource/eagles", method="POST")
    style.
      /* Internal CSS styles */
      /* Apply styles to the form */
      #eagleForm {
        margin: 20px; /* Example margin */
        padding: 20px; /* Example padding */
        background-color: #f0f0f0; /* Example background color */
      }

      /* Apply styles to form inputs */
      input.outlined-input {
        width: 100%;
        padding: 8px;
        margin: 6px 0;
        border: 1px solid #ccc;
        border-radius: 4px;
      }

      /* Apply styles to labels */
      label.eagleAttr {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
      }

      /* Apply styles to submit button */
      input[type="submit"].btn.btn-primary {
        background-color: #007bff; /* Example button color */
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 10px;
      }

      input[type="submit"].btn.btn-primary:hover {
        background-color: #0056b3; /* Example hover color */
      }

    .form-group
      label.eagleAttr(for='name') Eagle Name
      input#name.outlined-input(type='text', name='name')
    .form-group
      label.eagleAttr(for='age') Eagle Age
      input#price.outlined-input(type='number', name='age')
    .form-group
      label.eagleAttr(for='description') Eagle Description
      input#description.outlined-input(type='text', name='description')
    input.btn.btn-primary(type="submit", value="Submit")
